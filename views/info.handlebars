<!-- 证件信息页 -->
<div class="container">
<div class="row">
	<div class="col-lg-2">
    {{>list-group}}
	</div>
	<div class="col-lg-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">证件信息</h4>
      </div>
      <div class="panel-body">
        {{#if info}}
        <div  class="col-lg-6">

          <table class="table table-bordered">
            <form id ="form" action="/infochange" method="post">
            <tbody>
              <tr>
                <td>证件号</td>
                <td><input style="width:100%" name="readerId" readonly="true" value="{{info.readerId}}"> </input></td>
              </tr>
              <tr>
                <td>姓名</td>
                <td><input style="width: 100%" value="{{info.name}}" name="name"></input></td>
              </tr>
              <tr>
                <td>性别</td>
                <td><input style="width: 100%" value="{{info.sex}}" name="sex"></input></td>
              </tr>
              <tr>
                <td>身份证号</td>
                <td><input style="width: 100%" value="{{info.creditNum}}" name="creditNum"></input></td>
              </tr>
              <tr>
                <td>手机</td>
                <td><input style="width: 100%" value="{{info.phone}}" name="phone"></input></td>
              </tr>
              <tr>
                <td>Email</td>
                <td><input style="width: 100%" value="{{info.email}}" name="email"></input></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-lg-6">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td>最大可借图书</td>
                <td><input style="width: 100%" readonly="true" value="{{info.maxBorrow}}" name="maxBorrow"></input></td>
                
              </tr>
              <tr>
                <td>违章次数</td>
                <td> <input style="width: 100%" disabled="disabled" value="{{info.breakRule}}" name = "breakRule">  </input></td>
              </tr>
            </tbody>
                <button style="border: 1px; margin-top:50px" class="btn btn-lg btn-primary btn-block" type="submit">提交</button>
            </form>
          </table>
        </div>
        {{else}}
        {{/if}}
      </div>
    </div>
	</div>
</div>
{{>footer}}
</div>
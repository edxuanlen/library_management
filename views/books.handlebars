<div class="container">
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h4 class="panel-title">书目信息</h4>
	  </div>
	  <div class="panel-body">
	  	<div class="row" style="margin:10px;">
	  		{{#if bookInfo}}
				<dl class="booklist clearfix">
					<dt>题名:</dt>
					<dd><a href="">{{bookInfo.title}}</a></dd>
				</dl>
				<dl class="booklist clearfix">
					<dt>作者/责任者:</dt>
					<dd>{{bookInfo.author}}</dd>
				</dl>
				<dl class="booklist clearfix">
					<dt>版本说明:</dt>
					<dd>第1版</dd>
				</dl>
				<dl class="booklist clearfix">
				<dt>出版发行商:</dt>
				<dd>{{bookInfo.press}}</dd>
				</dl>
				<dl class="booklist clearfix">
					<dt>ISBN:</dt>
					<dd>{{bookInfo.isbn}}</dd>
				</dl>
				<dl class="booklist clearfix">
					<dt valign="top">内容简介: </dt>
					<dd style="padding-bottom: 8px;">{{bookInfo.content}}</dd>
				</dl>

				{{/if}}
	  	</div>
	  	<div class="row" style="margin:10px;">
	  		<div class="bs-example bs-example-tabs">
			    <ul class="nav nav-tabs" role="tablist">
			      <li role="presentation" class="active">
			      	<a href="#home" id="home-tab" role="tab" data-toggle="tab">馆藏信息</a>
			      </li>
			      
			    </ul>
			    <div class="tab-content">
			      <div role="tabpanel" class="tab-pane fade active in" id="home" aria-labelledby="home-tab">
          		<table class="table">
          			<thead>
          				<tr>
          					<th>条码号</th>
          					<th>书刊状态</th>
          					<th>执行借阅</th>
          				</tr>
          			</thead>
          			<tbody>
          				{{#each booksState}}
          				<tr>
        	          <td>{{bookcode}}</td>
        	          <td>{{state}}</td>
        	          <td>{{{isBorrow}}}</td>
        	        </tr>
        	        {{/each}}
          			</tbody>
          		</table>
			      </div>
			      <div role="tabpanel" class="tab-pane fade" id="profile" aria-labelledby="profile-tab">
			        <table class="table">
          		</table>
			      </div>
			    </div>
			  </div>
	  	</div>
	  </div>
	</div>

	

	{{>footer}}
</div>